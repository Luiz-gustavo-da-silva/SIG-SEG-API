generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  reports     Report[]
  occurrence   Occurrence[]

  @@map("users")
}

model Report {
  id          Int       @id @default(autoincrement())
  userId      Int?          
  code        String       @unique
  description String
  status      ReportStatus @default(PENDING)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime @updatedAt

  user      User?      @relation(fields: [userId], references: [id])
  
  reporterName  String? 
  CPF           String?
  telephone     String?
  address       String?
  email         String?

  addressReport String?
  cityReport    String?
  UFReport      String?
  countryReport String?

  occurrence    Occurrence?
 
  @@map("Reports")
}

model Occurrence {
  id          Int          @id @default(autoincrement())
  reportId    Int          @unique         
  userId      Int
  report      Report      @relation(fields: [reportId], references: [id])
  user        User         @relation(fields: [userId], references: [id])
  description String
  status      OccurrenceStatus @default(OPEN)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@map("Occurrences")
}

enum ReportStatus {
  PENDING 
  UNDER_REVIEW
  CONVERTED_TO_OCCURRENCE 
}

enum OccurrenceStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}
